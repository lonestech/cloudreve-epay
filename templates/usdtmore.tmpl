<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USDT 支付</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .payment-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }
        .payment-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .payment-header h2 {
            color: #343a40;
            font-weight: 600;
        }
        .payment-details {
            margin-bottom: 30px;
        }
        .payment-qr {
            text-align: center;
            margin-bottom: 30px;
        }
        .payment-address {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            word-break: break-all;
            text-align: center;
        }
        .payment-timer {
            text-align: center;
            margin-bottom: 20px;
        }
        .payment-actions {
            text-align: center;
        }
        .usdt-logo {
            width: 60px;
            height: 60px;
            margin-bottom: 15px;
        }
        .copy-btn {
            cursor: pointer;
            color: #0d6efd;
            text-decoration: underline;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 20px;
        }
        .status-waiting {
            background-color: #fff3cd;
            color: #856404;
        }
        .status-success {
            background-color: #d4edda;
            color: #155724;
        }
        .status-expired {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="payment-container">
            <div class="payment-header">
                <img src="https://us.wkk.su/img/chain/USDT-BEP20.png" alt="USDT Logo" class="usdt-logo" style="width: 60px; height: 60px;">
                <h2>USDT 支付</h2>
                <div class="status-badge status-waiting" id="status-badge">等待支付</div>
            </div>
            
            <div class="payment-details">
                <div class="row mb-3">
                    <div class="col-5 text-muted">订单编号：</div>
                    <div class="col-7">{{.OrderId}}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-5 text-muted">商品名称：</div>
                    <div class="col-7">{{.Name}}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-5 text-muted">支付金额：</div>
                    <div class="col-7">¥ {{.Amount}}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-5 text-muted">USDT 金额：</div>
                    <div class="col-7">{{.USDTAmount}} USDT</div>
                </div>
            </div>
            
            <div class="payment-qr">
                <div style="background-color: white; padding: 15px; border-radius: 10px; display: inline-block; margin-bottom: 10px;">
                    <img src="{{.QRCodeURL}}" alt="支付二维码" class="img-fluid" style="max-width: 200px;">
                </div>
                <p class="text-muted mt-2">使用 USDT 钱包扫描二维码支付</p>
                <p class="text-muted small">扫码支付 {{.USDTAmount}} USDT 至地址 {{.Address}}</p>
            </div>
            
            <div class="payment-address">
                <p class="mb-1 text-muted">USDT 收款地址</p>
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="address-input" value="{{.Address}}" readonly>
                    <button class="btn btn-outline-secondary" type="button" id="copy-address-btn">复制</button>
                </div>
                <div id="copy-success" class="text-success small" style="display: none;">已复制到剪贴板！</div>
            </div>
            
            <div class="payment-timer">
                <p class="text-muted">订单过期时间：<span id="expire-time">{{.ExpireTime}}</span></p>
            </div>
            
            <div class="payment-actions">
                <a href="{{.PaymentURL}}" target="_blank" class="btn btn-primary me-2">前往 USDTMore 支付</a>
                <button class="btn btn-outline-secondary" id="check-status-btn">检查支付状态</button>
            </div>
        </div>
    </div>

    <script>
        // 复制到剪贴板 - 兼容性更好的方法
        function copyToClipboard(text) {
            // 创建一个临时输入框
            const tempInput = document.createElement('textarea');
            tempInput.value = text;
            
            // 确保元素不可见
            tempInput.style.position = 'absolute';
            tempInput.style.left = '-9999px';
            
            // 添加到DOM，选中文本并复制
            document.body.appendChild(tempInput);
            tempInput.select();
            tempInput.setSelectionRange(0, 99999); // 兼容移动设备
            
            let successful = false;
            try {
                successful = document.execCommand('copy');
            } catch (err) {
                console.error('复制失败:', err);
            }
            
            // 清理
            document.body.removeChild(tempInput);
            return successful;
        }

        // 检查支付状态
        function checkPaymentStatus() {
            const tradeId = '{{.OrderId}}';
            fetch(`/api/usdtmore/check-status/${tradeId}`)
                .then(response => response.json())
                .then(data => {
                    const statusBadge = document.getElementById('status-badge');
                    
                    if (data.status === 'success') {
                        statusBadge.className = 'status-badge status-success';
                        statusBadge.innerText = '支付成功';
                        
                        // 延迟 2 秒后跳转到返回 URL
                        setTimeout(() => {
                            window.location.href = '{{.RedirectURL}}';
                        }, 2000);
                    } else if (data.status === 'expired') {
                        statusBadge.className = 'status-badge status-expired';
                        statusBadge.innerText = '订单已过期';
                    } else {
                        // 如果还在等待支付，继续轮询
                        setTimeout(checkPaymentStatus, 5000);
                    }
                })
                .catch(error => {
                    console.error('检查支付状态出错:', error);
                });
        }

        // 页面加载后开始检查支付状态
        document.addEventListener('DOMContentLoaded', function() {
            // 开始轮询支付状态
            setTimeout(checkPaymentStatus, 5000);
            
            // 点击检查按钮时立即检查
            document.getElementById('check-status-btn').addEventListener('click', function() {
                checkPaymentStatus();
            });
            
            // 设置复制按钮事件
            document.getElementById('copy-address-btn').addEventListener('click', function() {
                const addressInput = document.getElementById('address-input');
                const copySuccess = document.getElementById('copy-success');
                
                // 复制地址
                if (copyToClipboard(addressInput.value)) {
                    // 显示成功消息
                    copySuccess.style.display = 'block';
                    // 3秒后隐藏成功消息
                    setTimeout(function() {
                        copySuccess.style.display = 'none';
                    }, 3000);
                }
            });
        });
    </script>
</body>
</html>
